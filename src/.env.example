# Airport Tracking System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# API KEYS
# ============================================
# Get your free API key from: https://aviationstack.com/
AVIATIONSTACK_API_KEY=your_API_key

# OpenSky Network (no key required, but rate limited)
# Free tier: 400 requests per day
OPENSKY_USERNAME=FAH
OPENSKY_PASSWORD=TL]M2{C632Z+

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080
HOST=localhost

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MONGODB CONFIGURATION
# ============================================
MONGODB_URI=mongodb://admin:airport123@localhost:27017/airport_system?authSource=admin
MONGODB_DB_NAME=airport_system

# ============================================
# NEO4J CONFIGURATION
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=airport123

# ============================================
# AIRPORT CONFIGURATION
# ============================================
# Your airport ICAO code (e.g., EDDF for Frankfurt)
AIRPORT_ICAO=EDDF
AIRPORT_NAME=Frankfurt Airport
AIRPORT_LATITUDE=50.0379
AIRPORT_LONGITUDE=8.5622

# ============================================
# SAFETY THRESHOLDS
# ============================================
# Minimum safe distance between aircraft (in kilometers)
COLLISION_SAFE_DISTANCE_KM=5

# Minimum safe altitude difference (in feet)
COLLISION_SAFE_ALTITUDE_FT=1000

# Minimum safe altitude outside airport zones (in feet)
MIN_SAFE_ALTITUDE_FT=1000

# Airport zone radius (in kilometers)
AIRPORT_ZONE_RADIUS_KM=10

# ============================================
# DATA REFRESH INTERVALS (in seconds)
# ============================================
FLIGHT_DATA_REFRESH_INTERVAL=10
COLLISION_CHECK_INTERVAL=5
ALTITUDE_CHECK_INTERVAL=5
KPI_UPDATE_INTERVAL=60

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/airport-system.log

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=http://localhost:8080
ENABLE_CORS=true